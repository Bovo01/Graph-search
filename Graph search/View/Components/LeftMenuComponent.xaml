<UserControl x:Class="Graph_search.View.Components.LeftMenuComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="20*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid Grid.Column="1">
            <TextBox x:Name="NameTextBox" KeyDown="AddNodeEnter" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Margin="0,10,0,0" HorizontalAlignment="Stretch" />
            <Button Content="Add node" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,33,0,0" Click="AddNodeClick"/>
            <Button x:Name="AddEdgeButton" Content="Add edge" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,86,0,0" Click="AddEdgeClick" />
        </Grid>
    </Grid>
</UserControl>
