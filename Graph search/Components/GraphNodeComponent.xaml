<UserControl x:Class="Graph_search.Components.GraphNodeComponent"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Graph_search"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Grid AllowDrop="False">
        <Ellipse Height="50" Width="50" Stroke="Black" AllowDrop="False"/>
        <TextBlock Text="{Binding NodeName}" Width="50" MaxHeight="50" TextAlignment="Center" VerticalAlignment="Center" FontSize="10" Background="{x:Null}" TextWrapping="Wrap" AllowDrop="False"/>
    </Grid>
</UserControl>
